<h1>Edit a Contact</h1>

<form action="/contacts/<%= @contact.id %>" method="post" class="form-horizontal">

  <input type="hidden" name="_method" value="put">
  
  <div class="form-group">
  <label for="first_name" class="col-sm-2 control-label">First name</label>
    <div class="col-sm-10">
      <input type="text" name="first_name" value="<%= @contact.first_name %>">
    </div>
  </div>


  <div class="form-group">
  <label for="last_name" class="col-sm-2 control-label">Last name</label>
    <div class="col-sm-10">
      <input type="text" name="last_name" value="<%= @contact.last_name %>">
    </div>
  </div>

   <div class="form-group">
  <label for="email" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <input type="text" name="email" value="<%= @contact.email %>" placeholder="name@example.com">
    </div>
  </div>

 <div class="form-group">
  <label for="note" class="col-sm-2 control-label">Note</label>
    <div class="col-sm-10">
     <textarea name="note" cols="30" rows="7" placeholder="Type a note here..."></textarea>
    </div>
  </div>
  
  <input type="submit" name="Submit">
</form>